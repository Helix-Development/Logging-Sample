<Window x:Class="Logging_Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logging_Sample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox Name="TextSample" HorizontalAlignment="Left" Height="366" Margin="23,10,0,0" VerticalAlignment="Top" Width="707">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
                </RichTextBox.Resources>
        </RichTextBox>
        <Button Content="Button" HorizontalAlignment="Left" Height="43" Margin="234,381,0,0" VerticalAlignment="Top" Width="209" Click="Button_Click"/>

    </Grid>
</Window>
